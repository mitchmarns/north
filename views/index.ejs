<div class="hero-section">
  <div class="hero-content">
    <h1 class="hero-title">northern attitude</h1>
    <p class="hero-subtitle">forgive my northern attitude - i was raised on little light</p>
    
    <% if (!user) { %>
      <div class="hero-buttons">
        <a href="/auth/register" class="btn btn-lg btn-primary">Get Started</a>
        <a href="/auth/login" class="btn btn-lg btn-outline">Login</a>
      </div>
    <% } else { %>
      <div class="hero-buttons">
        <a href="/dashboard" class="btn btn-lg btn-primary">Go to Dashboard</a>
      </div>
    <% } %>
  </div>
</div>

<div class="features-section">
  <div class="section-header">
    <h2>quick links</h2>
  </div>
  
  <div class="row feature-cards">
    <div class="col">
      <div class="card feature-card">
        <div class="feature-icon">
          <i class="ph-user-circle-plus-duotone"></i>
        </div>
        <div class="card-body">
          <h3>Create Characters</h3>
          <a href="/characters" class="btn">Explore Characters</a>
        </div>
      </div>
    </div>
    
    <div class="col">
      <div class="card feature-card">
        <div class="feature-icon">
          <i class="ph-pen-nib-duotone"></i>
        </div>
        <div class="card-body">
          <h3>Threads</h3>
          <a href="/writing/threads" class="btn">Browse Threads</a>
        </div>
      </div>
    </div>
    
    <div class="col">
      <div class="card feature-card">
        <div class="feature-icon">
          <i class="ph-users-three-duotone"></i>
        </div>
        <div class="card-body">
          <h3>Track Relationships</h3>
          <p>This is a placeholder for a relationship map</p>
          <a href="/characters" class="btn">See Characters</a>
        </div>
      </div>
    </div>
  </div>
</div>

<% if (typeof randomCharacters !== 'undefined' && randomCharacters.length > 0) { %>
  <div class="discover-section">
    <div class="section-header">
      <h2>Discover Characters</h2>
    </div>
    
    <div class="row character-showcase">
      <!-- First row: first 3 characters -->
      <% randomCharacters.slice(0, 3).forEach(character => { %>
        <div class="col" style="flex: 0 0 33.333333%;">
          <div class="character-card">
            <% if (character.avatarUrl) { %>
              <div class="character-image-container">
                <img src="<%= character.avatarUrl %>" alt="<%= character.name %>" class="character-image">
              </div>
            <% } else { %>
              <div class="character-image-container">
                <div class="character-image character-placeholder">
                  <span><%= character.name.charAt(0).toUpperCase() %></span>
                </div>
              </div>
            <% } %>
            
            <div class="character-info">
              <h4 class="character-name"><%= character.name %></h4>
              <% if (character.shortBio) { %>
                <p class="character-bio"><%= character.shortBio %></p>
              <% } %>
              <div class="character-tags">
                <% if (character.gender) { %>
                  <span class="character-tag"><%= character.gender %></span>
                <% } %>
                <% if (character.User) { %>
                  <span class="character-tag">by <%= character.User.username %></span>
                <% } %>
              </div>
              <div class="mt-2">
                <a href="/characters/<%= character.id %>" class="btn btn-sm">View Profile</a>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
    
    <div class="row character-showcase">
      <!-- Second row: next 3 characters -->
      <% randomCharacters.slice(3, 6).forEach(character => { %>
        <div class="col" style="flex: 0 0 33.333333%;">
          <div class="character-card">
            <% if (character.avatarUrl) { %>
              <div class="character-image-container">
                <img src="<%= character.avatarUrl %>" alt="<%= character.name %>" class="character-image">
              </div>
            <% } else { %>
              <div class="character-image-container">
                <div class="character-image character-placeholder">
                  <span><%= character.name.charAt(0).toUpperCase() %></span>
                </div>
              </div>
            <% } %>
            
            <div class="character-info">
              <h4 class="character-name"><%= character.name %></h4>
              <% if (character.shortBio) { %>
                <p class="character-bio"><%= character.shortBio %></p>
              <% } %>
              <div class="character-tags">
                <% if (character.gender) { %>
                  <span class="character-tag"><%= character.gender %></span>
                <% } %>
                <% if (character.User) { %>
                  <span class="character-tag">by <%= character.User.username %></span>
                <% } %>
              </div>
              <div class="mt-2">
                <a href="/characters/<%= character.id %>" class="btn btn-sm">View Profile</a>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
    
    <div class="text-center mt-4">
      <a href="/characters" class="btn btn-lg btn-outline">Explore All Characters</a>
    </div>
  </div>
  <% } %>