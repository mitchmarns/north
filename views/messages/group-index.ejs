<!-- Simple test template: views/messages/group-index.ejs -->
<h1><%= character.name %>'s Group Chats</h1>

<% if (conversations && conversations.length > 0) { %>
  <ul>
    <% conversations.forEach(conv => { %>
      <li>
        <%= conv.name %> 
        (<%= conv.isGlobal ? 'Global' : (conv.Team ? 'Team' : 'Custom') %>)
      </li>
    <% }); %>
  </ul>
<% } else { %>
  <p>No group conversations found.</p>
<% } %>

<a href="/dashboard">Back to Dashboard</a>