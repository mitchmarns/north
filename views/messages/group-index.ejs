<!-- views/messages/group-index.ejs -->
<div class="d-flex justify-between align-center mb-4">
  <div>
    <h1><%= character.name %>'s Group Chats</h1>
    <div style="color: rgba(255, 255, 255, 0.7);">
      <%= conversations.length %> group conversations
      <% if (totalUnread > 0) { %>
        â€¢ <span class="unread-badge"><%= totalUnread %> unread</span>
      <% } %>
    </div>
  </div>
  
  <div>
    <button type="button" class="btn mr-2" data-toggle="modal" data-target="#createGroupModal">
      <i class="ph-users-plus-duotone"></i> Create Group
    </button>
    <a href="/characters/<%= character.id %>" class="btn btn-outline">
      <i class="ph-arrow-left-duotone"></i> Back to Character
    </a>
  </div>
</div>

<div class="row">
  <!-- Conversations List -->
  <div class="col" style="flex: 0 0 100%;">
    <div class="card">
      <div class="card-body">
        <% if (conversations && conversations.length > 0) { %>
          <div class="conversation-list">
            <% conversations.forEach(conv => { %>
              <a href="/messages/groups/<%= character.id %>/<%= conv.id %>" class="conversation-item">
                <div class="conversation-avatar">
                  <% if (conv.avatarUrl) { %>
                    <img src="<%= conv.avatarUrl %>" alt="<%= conv.name %>" class="avatar-image">
                  <% } else if (conv.team && conv.team.logo) { %>
                    <img src="<%= conv.team.logo %>" alt="<%= conv.name %>" class="avatar-image">
                  <% } else { %>
                    <div class="avatar-placeholder <%= conv.isGlobal ? 'global-avatar' : '' %>">
                      <%= conv.name.charAt(0).toUpperCase() %>
                    </div>
                  <% } %>
                  
                  <% if (conv.unreadCount > 0) { %>
                    <span class="unread-count"><%= conv.unreadCount %></span>
                  <% } %>
                </div>
                
                <div class="conversation-content">
                  <div class="conversation-header">
                    <h4 class="conversation-name">
                      <%= conv.name %>
                      <% if (conv.isGlobal) { %>
                        <span class="global-badge">Global</span>
                      <% } else if (conv.team) { %>
                        <span class="team-badge">Team</span>
                      <% } %>
                    </h4>
                    <div class="conversation-time">
                      <%= conv.lastMessageAt ? new Date(conv.lastMessageAt).toLocaleDateString() : 'No messages' %>
                    </div>
                  </div>
                  
                  <div class="conversation-meta">
                    <% if (conv.lastMessage) { %>
                      <span class="last-message">
                        <%= conv.lastMessage.sender.name %>: <%= conv.lastMessage.content.length > 50 ? conv.lastMessage.content.substring(0, 50) + '...' : conv.lastMessage.content %>
                      </span>
                    <% } else { %>
                      <span class="last-message empty">No messages yet</span>
                    <% } %>
                    <span><%= conv.memberCount %> members</span>
                  </div>
                </div>
              </a>
            <% }); %>
          </div>
        <% } else { %>
          <div class="text-center p-4">
            <div style="margin-bottom: 20px; color: rgba(255, 255, 255, 0.5);">
              <i class="ph-chat-circle-dots-duotone" style="font-size: 3rem;"></i>
            </div>
            <h3>No group conversations yet</h3>
            <p>Create a new group or join an existing one to start messaging with multiple characters at once.</p>
            <button type="button" class="btn mt-3" data-toggle="modal" data-target="#createGroupModal">Create a New Group</button>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Create Group Modal -->
<div class="modal" id="createGroupModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create a New Group</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/messages/groups/<%= character.id %>/create" method="POST">
          <div class="form-group">
            <label for="name">Group Name *</label>
            <input type="text" id="name" name="name" class="form-control" required>
          </div>
          
          <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" class="form-control" rows="3"></textarea>
          </div>
          
          <div class="form-group">
            <label for="avatarUrl">Group Avatar URL</label>
            <input type="url" id="avatarUrl" name="avatarUrl" class="form-control" placeholder="https://example.com/image.jpg">
            <small style="color: rgba(255, 255, 255, 0.5);">Enter a direct link to an image (JPG, PNG, or GIF)</small>
          </div>
          
          <div class="form-group">
            <label>Invite Characters</label>
            <div class="character-select-container">
              <% if (character.User && character.User.characters && character.User.characters.length > 1) { %>
                <% character.User.characters.forEach(char => { %>
                  <% if (char.id !== character.id) { %>
                    <div class="character-select-item">
                      <input type="checkbox" id="char<%= char.id %>" name="invitedCharacterIds" value="<%= char.id %>">
                      <label for="char<%= char.id %>">
                        <% if (char.avatarUrl) { %>
                          <img src="<%= char.avatarUrl %>" alt="<%= char.name %>" class="character-select-avatar">
                        <% } else { %>
                          <div class="character-select-avatar-placeholder"><%= char.name.charAt(0).toUpperCase() %></div>
                        <% } %>
                        <span><%= char.name %></span>
                      </label>
                    </div>
                  <% } %>
                <% }); %>
              <% } else { %>
                <p>You don't have any other characters to invite.</p>
              <% } %>
            </div>
          </div>
          
          <div class="modal-footer">
            <button type="button" class="btn btn-outline" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn">Create Group</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  .conversation-list {
    display: flex;
    flex-direction: column;
  }
  
  .conversation-item {
    display: flex;
    padding: 15px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--lighttext);
    transition: background-color var(--transition-fast);
  }
  
  .conversation-item:hover {
    background-color: rgba(255, 255, 255, 0.05);
  }
  
  .conversation-item:last-child {
    border-bottom: none;
  }
  
  .conversation-avatar {
    position: relative;
    margin-right: 15px;
  }
  
  .avatar-image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }
  
  .avatar-placeholder {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: #555;
    color: #eee;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: var(--semibold);
  }
  
  .avatar-placeholder.global-avatar {
    background-color: #6c8eed;
  }
  
  .unread-count {
    position: absolute;
    bottom: -5px;
    right: -5px;
    background-color: var(--danger);
    color: white;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-xs);
    font-weight: var(--bold);
  }
  
  .conversation-content {
    flex: 1;
  }
  
  .conversation-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 5px;
  }
  
  .conversation-name {
    font-size: var(--text-lg);
    margin: 0;
  }
  
  .global-badge, .team-badge {
    display: inline-block;
    font-size: var(--text-xs);
    padding: 2px 6px;
    border-radius: 10px;
    margin-left: 5px;
  }
  
  .global-badge {
    background-color: rgba(108, 142, 237, 0.2);
    color: #6c8eed;
  }
  
  .team-badge {
    background-color: rgba(40, 167, 69, 0.2);
    color: var(--success);
  }
  
  .conversation-time {
    font-size: var(--text-xs);
    color: rgba(255, 255, 255, 0.5);
  }
  
  .conversation-meta {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.7);
    display: flex;
    justify-content: space-between;
  }
  
  .last-message {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-right: 10px;
  }
  
  .last-message.empty {
    font-style: italic;
    color: rgba(255, 255, 255, 0.5);
  }
  
  .character-select-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 15px;
    margin-top: 10px;
  }
  
  .character-select-item {
    display: flex;
    align-items: center;
  }
  
  .character-select-item input[type="checkbox"] {
    margin-right: 10px;
  }
  
  .character-select-item label {
    display: flex;
    align-items: center;
    cursor: pointer;
  }
  
  .character-select-avatar {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    margin-right: 8px;
    object-fit: cover;
  }
  
  .character-select-avatar-placeholder {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: #555;
    color: #eee;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: var(--bold);
    margin-right: 8px;
  }
  
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.7);
  }
  
  .modal-dialog {
    margin: 50px auto;
    max-width: 600px;
  }
  
  .modal-content {
    background-color: var(--card-bg);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-lg);
  }
  
  .modal-header {
    padding: 15px 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .modal-title {
    margin: 0;
    font-size: var(--text-xl);
  }
  
  .close {
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.5rem;
    cursor: pointer;
  }
  
  .close:hover {
    color: white;
  }
  
  .modal-body {
    padding: 20px;
  }
  
  .modal-footer {
    padding: 15px 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: right;
  }
</style>

<script>
  // Modal functionality
  document.addEventListener('DOMContentLoaded', function() {
    const modalTriggers = document.querySelectorAll('[data-toggle="modal"]');
    const modalCloseButtons = document.querySelectorAll('[data-dismiss="modal"]');
    
    modalTriggers.forEach(trigger => {
      trigger.addEventListener('click', function() {
        const targetId = this.getAttribute('data-target');
        const modal = document.querySelector(targetId);
        
        if (modal) {
          modal.style.display = 'block';
        }
      });
    });
    
    modalCloseButtons.forEach(button => {
      button.addEventListener('click', function() {
        const modal = this.closest('.modal');
        
        if (modal) {
          modal.style.display = 'none';
        }
      });
    });
    
    // Close modal when clicking outside content
    window.addEventListener('click', function(event) {
      if (event.target.classList.contains('modal')) {
        event.target.style.display = 'none';
      }
    });
  });
</script>