<!-- views/messages/group-index.ejs -->
<div class="d-flex justify-between align-center mb-4">
  <div>
    <h1>
      <% if (typeof character !== 'undefined' && character) { %>
        <%= character.name %>'s Group Chats
      <% } else { %>
        Group Chats
      <% } %>
    </h1>
    <div style="color: rgba(255, 255, 255, 0.7);">
      <% if (typeof conversations !== 'undefined') { %>
        <%= conversations.length %> conversations
        <% if (typeof totalUnread !== 'undefined' && totalUnread > 0) { %>
          â€¢ <span class="unread-badge"><%= totalUnread %> unread</span>
        <% } %>
      <% } %>
    </div>
  </div>
  
  <div>
    <% if (typeof character !== 'undefined' && character) { %>
      <a href="/messages/<%= character.id %>/new" class="btn mr-2">
        <i class="ph-plus-duotone"></i> New Message
      </a>
      <a href="/characters/<%= character.id %>" class="btn btn-outline">
        <i class="ph-arrow-left-duotone"></i> Back to Character
      </a>
    <% } %>
  </div>
</div>

<div class="row">
  <!-- Character Selector -->
  <div class="col" style="flex: 0 0 25%;">
    <div class="card mb-4">
      <div class="card-header">
        <h3 class="mb-0">Your Characters</h3>
      </div>
      <div class="card-body p-0">
        <% if (typeof characters !== 'undefined' && characters.length > 0) { %>
          <div class="character-selector">
            <% characters.forEach(char => { %>
              <a href="/messages/groups/<%= char.id %>" 
                 class="character-selector-item <%= (typeof character !== 'undefined' && character && character.id === char.id) ? 'active' : '' %>">
                <div class="character-selector-avatar">
                  <% if (char.avatarUrl) { %>
                    <img src="<%= char.avatarUrl %>" alt="<%= char.name %>">
                  <% } else { %>
                    <div class="avatar-placeholder">
                      <%= char.name.charAt(0).toUpperCase() %>
                    </div>
                  <% } %>
                </div>
                <div class="character-selector-name"><%= char.name %></div>
              </a>
            <% }); %>
          </div>
        <% } else { %>
          <div class="text-center p-3">
            <p>You have no characters.</p>
            <a href="/characters/create" class="btn btn-sm">Create a Character</a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <!-- Conversations -->
  <div class="col" style="flex: 0 0 75%;">
    <% if (typeof character !== 'undefined' && character) { %>
      <div class="card">
        <div class="card-header">
          <h3 class="mb-0">Group Conversations</h3>
        </div>
        <div class="card-body">
          <% if (typeof conversations !== 'undefined' && conversations.length > 0) { %>
            <div class="conversation-list">
              <% conversations.forEach(conv => { %>
                <a href="/messages/groups/<%= character.id %>/<%= conv.id %>" class="conversation-item">
                  <div class="conversation-avatar">
                    <% if (conv.avatarUrl) { %>
                      <img src="<%= conv.avatarUrl %>" alt="<%= conv.name %>" class="avatar-image">
                    <% } else { %>
                      <div class="avatar-placeholder">
                        <%= conv.name.charAt(0).toUpperCase() %>
                      </div>
                    <% } %>
                  </div>
                  <div class="conversation-content">
                    <div class="conversation-header">
                      <h4 class="conversation-name"><%= conv.name %></h4>
                      <div class="conversation-time">
                        <%= conv.lastMessageAt ? new Date(conv.lastMessageAt).toLocaleDateString() : 'No messages' %>
                      </div>
                    </div>
                  </div>
                </a>
              <% }); %>
            </div>
          <% } else { %>
            <div class="text-center p-4">
              <p>No group conversations yet.</p>
              <a href="/messages/groups/<%= character.id %>/create" class="btn">Create a Group</a>
            </div>
          <% } %>
        </div>
      </div>
    <% } else { %>
      <div class="card">
        <div class="card-body text-center">
          <p>Please select a character to view group chats.</p>
          <% if (typeof characters !== 'undefined' && characters.length > 0) { %>
            <p>You have <%= characters.length %> character(s) available.</p>
          <% } else { %>
            <p>You need to create a character first.</p>
          <% } %>
          <a href="/characters/create" class="btn">Create a Character</a>
        </div>
      </div>
    <% } %>
  </div>
</div>

<style>
  /* Message Container Styles */
  .message-container {
    min-height: 400px;
    max-height: 600px;
    overflow-y: auto;
    padding: 20px;
  }
  
  .global-badge, .team-badge {
    display: inline-block;
    font-size: var(--text-xs);
    padding: 2px 6px;
    border-radius: 10px;
    background-color: rgba(108, 142, 237, 0.2);
    color: #6c8eed;
  }
  
  .team-badge {
    background-color: rgba(40, 167, 69, 0.2);
    color: var(--success);
  }
  
  /* Message Styles */
  .message-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  
  .message {
    display: flex;
    max-width: 90%;
    position: relative;
  }
  
  .message-mine {
    align-self: flex-end;
    flex-direction: row-reverse;
  }
  
  .message-theirs {
    align-self: flex-start;
  }
  
  .message-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 10px;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
    border: 2px solid rgba(255, 255, 255, 0.1);
    flex-shrink: 0;
  }
  
  .message-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .message-avatar span {
    width: 100%;
    height: 100%;
    background-color: #555;
    color: #eee;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: var(--bold);
  }
  
  .message-content {
    background-color: rgba(0, 0, 0, 0.2);
    padding: 10px 15px;
    border-radius: 12px;
    position: relative;
  }
  
  .message-mine .message-content {
    background-color: rgba(90, 128, 149, 0.2);
    border-top-right-radius: 0;
  }
  
  .message-theirs .message-content {
    border-top-left-radius: 0;
  }
  
  .message-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 5px;
  }
  
  .message-sender {
    font-weight: var(--medium);
    color: var(--header);
    font-size: var(--text-sm);
  }
  
  .message-time {
    font-size: var(--text-xs);
    color: rgba(255, 255, 255, 0.5);
    margin-left: 10px;
  }
  
  .message-body {
    white-space: pre-line;
    line-height: 1.5;
  }
  
  .message-image {
    margin-top: 10px;
    max-width: 300px;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .message-image img {
    max-width: 100%;
    height: auto;
    display: block;
  }
  
  .message-actions {
    position: absolute;
    top: 0;
    right: 0;
    opacity: 0;
    transition: opacity var(--transition-fast);
  }
  
  .message:hover .message-actions {
    opacity: 1;
  }
  
  .delete-message-btn {
    background: none;
    border: none;
    color: var(--danger);
    cursor: pointer;
    padding: 5px;
    font-size: var(--text-sm);
  }
  
  /* Group Info Styles */
  .group-info {
    margin-top: 15px;
  }
  
  .info-item {
    margin-bottom: 10px;
  }
  
  .info-label {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 2px;
  }
  
  .info-value {
    font-weight: var(--medium);
  }
  
  /* Group Members List */
  .group-members-list {
    max-height: 300px;
    overflow-y: auto;
  }
  
  .group-member-item {
    display: flex;
    align-items: center;
    padding: 10px 15px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .group-member-item:last-child {
    border-bottom: none;
  }
  
  .member-avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 12px;
  }
  
  .member-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .avatar-placeholder {
    width: 100%;
    height: 100%;
    background-color: #555;
    color: #eee;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: var(--bold);
  }
  
  .member-info {
    flex: 1;
  }
  
  .member-name {
    font-weight: var(--medium);
    display: flex;
    align-items: center;
  }
  
  .admin-badge {
    font-size: var(--text-xs);
    background-color: rgba(255, 193, 7, 0.2);
    color: var(--warning);
    padding: 2px 6px;
    border-radius: 10px;
    margin-left: 8px;
  }
  
  .member-user {
    font-size: var(--text-xs);
    color: rgba(255, 255, 255, 0.6);
  }
  
  /* Your Characters Styles */
  .your-characters-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .your-character-item {
    padding: 8px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .your-character-item:last-child {
    border-bottom: none;
  }
  
  .character-mini-avatar {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: #555;
    margin-right: 10px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: var(--bold);
  }
  
  .character-mini-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .already-member-badge {
    font-size: var(--text-xs);
    color: rgba(255, 255, 255, 0.5);
    font-style: italic;
  }
  
  /* Character Grid for Invites */
  .character-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
    max-height: 300px;
    overflow-y: auto;
    padding: 10px 0;
  }
  
  /* Modal styles are in the group-index.ejs file */
  
  /* Fix for padding */
  .p-0 {
    padding: 0 !important;
  }
</style>

<script>
  // Scroll to bottom of messages container on page load
  document.addEventListener('DOMContentLoaded', () => {
    const messageContainer = document.querySelector('.message-container');
    if (messageContainer) {
      messageContainer.scrollTop = messageContainer.scrollHeight;
    }
    
    // Modal functionality (copied from group-index.ejs)
    const modalTriggers = document.querySelectorAll('[data-toggle="modal"]');
    const modalCloseButtons = document.querySelectorAll('[data-dismiss="modal"]');
    
    modalTriggers.forEach(trigger => {
      trigger.addEventListener('click', function() {
        const targetId = this.getAttribute('data-target');
        const modal = document.querySelector(targetId);
        
        if (modal) {
          modal.style.display = 'block';
        }
      });
    });
    
    modalCloseButtons.forEach(button => {
      button.addEventListener('click', function() {
        const modal = this.closest('.modal');
        
        if (modal) {
          modal.style.display = 'none';
        }
      });
    });
    
    // Close modal when clicking outside content
    window.addEventListener('click', function(event) {
      if (event.target.classList.contains('modal')) {
        event.target.style.display = 'none';
      }
    });
    
    // Character search functionality for invite modal
    const characterSearch = document.getElementById('characterSearch');
    if (characterSearch) {
      characterSearch.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        const characterItems = document.querySelectorAll('.character-grid .character-item');
        
        characterItems.forEach(item => {
          const name = item.querySelector('.character-name').textContent.toLowerCase();
          
          if (name.includes(searchTerm)) {
            item.style.display = '';
          } else {
            item.style.display = 'none';
          }
        });
      });
    }
  });
</script>