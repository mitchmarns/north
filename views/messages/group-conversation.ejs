<!-- views/messages/group-conversation.ejs -->
<div class="d-flex justify-between align-center mb-4">
  <div>
    <h1><%= group.name %></h1>
    <div style="color: rgba(255, 255, 255, 0.7);">
      <span><%= members.length %> members</span>
      <% if (group.isGlobal) { %>
        • <span class="global-badge">Global Chat</span>
      <% } else if (group.teamId) { %>
        • <span class="team-badge">Team Chat</span>
      <% } %>
    </div>
  </div>
  
  <div>
    <% if (!group.isGlobal && (!group.teamId || character.teamId !== group.teamId)) { %>
      <form action="/messages/groups/<%= character.id %>/<%= group.id %>/leave" method="POST" class="d-inline">
        <button type="submit" class="btn btn-danger btn-sm mr-2">
          <i class="ph-sign-out-duotone"></i> Leave Group
        </button>
      </form>
    <% } %>
    <a href="/messages/groups/<%= character.id %>" class="btn btn-outline">
      <i class="ph-arrow-left-duotone"></i> Back to Groups
    </a>
  </div>
</div>

<div class="row">
  <!-- Messages Area -->
  <div class="col" style="flex: 0 0 70%;">
    <div class="card mb-3">
      <div class="card-body message-container">
        <% if (messages && messages.length > 0) { %>
          <div class="message-list">
            <% messages.forEach(message => { %>
              <div class="message <%= message.isMine ? 'message-mine' : 'message-theirs' %>">
                <div class="message-avatar">
                  <% if (message.sender.avatarUrl) { %>
                    <img src="<%= message.sender.avatarUrl %>" alt="<%= message.sender.name %>">
                  <% } else { %>
                    <span><%= message.sender.name.charAt(0).toUpperCase() %></span>
                  <% } %>
                </div>
                
                <div class="message-content">
                  <div class="message-header">
                    <span class="message-sender"><%= message.sender.name %></span>
                    <span class="message-time">
                      <%= new Date(message.createdAt).toLocaleDateString() %> 
                      <%= new Date(message.createdAt).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
                    </span>
                  </div>
                  
                  <div class="message-body">
                    <%= message.content %>
                    <% if (message.imageUrl) { %>
                      <div class="message-image">
                        <img src="<%= message.imageUrl %>" alt="Shared image">
                      </div>
                    <% } %>
                  </div>
                </div>
                
                <% if (message.isMine || isAdmin) { %>
                  <div class="message-actions">
                    <form action="/messages/groups/<%= character.id %>/message/<%= message.id %>?_method=DELETE" method="POST" class="delete-message-form">
                      <button type="submit" class="delete-message-btn">
                        <i class="ph-trash-duotone"></i>
                      </button>
                    </form>
                  </div>
                <% } %>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="text-center p-5" style="color: rgba(255, 255, 255, 0.5);">
            <i class="ph-chats-teardrop-duotone" style="font-size: 3rem; margin-bottom: 1rem;"></i>
            <p>No messages yet. Start a conversation!</p>
          </div>
        <% } %>
      </div>
    </div>
    
    <!-- Message Form -->
    <div class="card">
      <div class="card-body">
        <form action="/messages/groups/<%= character.id %>/<%= group.id %>/send" method="POST">
          <div class="form-group">
            <textarea 
              name="content" 
              class="form-control" 
              rows="4" 
              placeholder="Type your message here..."
              required
            ></textarea>
          </div>
          
          <div class="form-group">
            <label for="imageUrl">Image URL (optional)</label>
            <input type="url" id="imageUrl" name="imageUrl" class="form-control" placeholder="https://example.com/image.jpg">
            <small style="color: rgba(255, 255, 255, 0.5);">Share an image with your message</small>
          </div>
          
          <div class="form-group text-right">
            <button type="submit" class="btn">
              <i class="ph-paper-plane-right-duotone"></i> Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <!-- Group Info Sidebar -->
  <div class="col" style="flex: 0 0 30%;">
    <div class="card mb-3">
      <div class="card-header">
        <h3 class="mb-0">About</h3>
      </div>
      <div class="card-body">
        <% if (group.description) { %>
          <p><%= group.description %></p>
        <% } else { %>
          <p class="text-muted">No description provided.</p>
        <% } %>
        
        <div class="group-info">
          <div class="info-item">
            <div class="info-label">Created by</div>
            <div class="info-value"><%= group.creator ? group.creator.username : 'Unknown' %></div>
          </div>
          
          <% if (group.Team) { %>
            <div class="info-item">
              <div class="info-label">Team</div>
              <div class="info-value"><%= group.Team.name %></div>
            </div>
          <% } %>
          
          <div class="info-item">
            <div class="info-label">Created on</div>
            <div class="info-value"><%= new Date(group.createdAt).toLocaleDateString() %></div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Group Members -->
    <div class="card mb-3">
      <div class="card-header d-flex justify-between align-center">
        <h3 class="mb-0">Members (<%= members.length %>)</h3>
        <% if (isAdmin && !group.isGlobal) { %>
          <button type="button" class="btn btn-sm" data-toggle="modal" data-target="#inviteModal">
            <i class="ph-user-plus-duotone"></i> Invite
          </button>
        <% } %>
      </div>
      <div class="card-body p-0">
        <div class="group-members-list">
          <% members.forEach(member => { %>
            <div class="group-member-item">
              <div class="member-avatar">
                <% if (member.character.avatarUrl) { %>
                  <img src="<%= member.character.avatarUrl %>" alt="<%= member.character.name %>">
                <% } else { %>
                  <div class="avatar-placeholder">
                    <%= member.character.name.charAt(0).toUpperCase() %>
                  </div>
                <% } %>
              </div>
              <div class="member-info">
                <div class="member-name">
                  <%= member.character.name %>
                  <% if (member.isAdmin) { %>
                    <span class="admin-badge">Admin</span>
                  <% } %>
                </div>
                <div class="member-user">
                  <small>
                    <%= member.character.User ? member.character.User.username : 'Unknown' %>
                    <% if (member.character.userId === character.userId) { %>
                      (You)
                    <% } %>
                  </small>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
    
    <!-- Your Other Characters -->
    <% if (userOtherCharacters && userOtherCharacters.length > 0) { %>
      <div class="card">
        <div class="card-header">
          <h3 class="mb-0">Your Other Characters</h3>
        </div>
        <div class="card-body">
          <div class="your-characters-list">
            <% userOtherCharacters.forEach(char => { %>
              <div class="your-character-item d-flex justify-between align-center">
                <div class="d-flex align-center">
                  <div class="character-mini-avatar">
                    <% if (char.avatarUrl) { %>
                      <img src="<%= char.avatarUrl %>" alt="<%= char.name %>">
                    <% } else { %>
                      <%= char.name.charAt(0).toUpperCase() %>
                    <% } %>
                  </div>
                  <div class="character-mini-name"><%= char.name %></div>
                </div>
                
                <% if (char.isMember) { %>
                  <span class="already-member-badge">Already in group</span>
                <% } else { %>
                  <form action="/messages/groups/<%= character.id %>/<%= group.id %>/join" method="POST">
                    <input type="hidden" name="joinCharacterId" value="<%= char.id %>">
                    <button type="submit" class="btn btn-sm">
                      <i class="ph-sign-in-duotone"></i> Join
                    </button>
                  </form>
                <% } %>
              </div>
            <% }); %>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<!-- Invite Members Modal (for group admins) -->
<% if (isAdmin && !group.isGlobal) { %>
  <div class="modal" id="inviteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Invite Members</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/messages/groups/<%= character.id %>/<%= group.id %>/invite" method="POST">
            <p>Select characters to invite to this group:</p>
            
            <div id="characterSearchContainer" class="mb-3">
              <input type="text" id="characterSearch" class="form-control" placeholder="Search characters...">
            </div>
            
            <div class="character-grid">
              <!-- This is where we'd ideally have a searchable list of characters -->
              <p class="text-center" style="color: rgba(255, 255, 255, 0.7);">This feature would be improved with a searchable list of characters with appropriate relationships to this character.</p>
              <p class="text-center text-muted">For now, you can add your own characters to the group.</p>
            </div>
            
            <div class="modal-footer">
              <button type="button" class="btn btn-outline" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn">Invite Selected</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
<% } %>

<style>
  /* Message Container Styles */
  .message-container {
    min-height: 400px;
    max-height: 600px;
    overflow-y: auto;
    padding: 20px;
  }
  
  .global-badge, .team-badge {
    display: inline-block;
    font-size: var(--text-xs);
    padding: 2px 6px;
    border-radius: 10px;
    background-color: rgba(108, 142, 237, 0.2);
    color: #6c8eed;
  }
  
  .team-badge {
    background-color: rgba(40, 167, 69, 0.2);
    color: var(--success);
  }
  
  /* Message Styles */
  .message-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  
  .message {
    display: flex;
    max-width: 90%;
    position: relative;
  }
  
  .message-mine {
    align-self: flex-end;
    flex-direction: row-reverse;
  }
  
  .message-theirs {
    align-self: flex-start;
  }
  
  .message-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 10px;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
    border: 2px solid rgba(255, 255, 255, 0.1);
    flex-shrink: 0;
  }
  
  .message-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .message-avatar span {
    width: 100%;
    height: 100%;
    background-color: #555;
    color: #eee;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: var(--bold);
  }
  
  .message-content {
    background-color: rgba(0, 0, 0, 0.2);
    padding: 10px 15px;
    border-radius: 12px;
    position: relative;
  }
  
  .message-mine .message-content {
    background-color: rgba(90, 128, 149, 0.2);
    border-top-right-radius: 0;
  }
  
  .message-theirs .message-content {
    border-top-left-radius: 0;
  }
  
  .message-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 5px;
  }
  
  .message-sender {
    font-weight: var(--medium);
    color: var(--header);
    font-size: var(--text-sm);
  }
  
  .message-time {
    font-size: var(--text-xs);
    color: rgba(255, 255, 255, 0.5);
    margin-left: 10px;
  }
  
  .message-body {
    white-space: pre-line;
    line-height: 1.5;
  }
  
  .message-image {
    margin-top: 10px;
    max-width: 300px;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .message-image img {
    max-width: 100%;
    height: auto;
    display: block;
  }
  
  .message-actions {
    position: absolute;
    top: 0;
    right: 0;
    opacity: 0;
    transition: opacity var(--transition-fast);
  }
  
  .message:hover .message-actions {
    opacity: 1;
  }
  
  .delete-message-btn {
    background: none;
    border: none;
    color: var(--danger);
    cursor: pointer;
    padding: 5px;
    font-size: var(--text-sm);
  }
  
  /* Group Info Styles */
  .group-info {
    margin-top: 15px;
  }
  
  .info-item {
    margin-bottom: 10px;
  }
  
  .info-label {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 2px;
  }
  
  .info-value {
    font-weight: var(--medium);
  }
  
  /* Group Members List */
  .group-members-list {
    max-height: 300px;
    overflow-y: auto;
  }
  
  .group-member-item {
    display: flex;
    align-items: center;
    padding: 10px 15px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .group-member-item:last-child {
    border-bottom: none;
  }
  
  .member-avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 12px;
  }
  
  .member-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .avatar-placeholder {
    width: 100%;
    height: 100%;
    background-color: #555;
    color: #eee;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: var(--bold);
  }
  
  .member-info {
    flex: 1;
  }
  
  .member-name {
    font-weight: var(--medium);
    display: flex;
    align-items: center;
  }
  
  .admin-badge {
    font-size: var(--text-xs);
    background-color: rgba(255, 193, 7, 0.2);
    color: var(--warning);
    padding: 2px 6px;
    border-radius: 10px;
    margin-left: 8px;
  }
  
  .member-user {
    font-size: var(--text-xs);
    color: rgba(255, 255, 255, 0.6);
  }
  
  /* Your Characters Styles */
  .your-characters-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .your-character-item {
    padding: 8px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .your-character-item:last-child {
    border-bottom: none;
  }
  
  .character-mini-avatar {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: #555;
    margin-right: 10px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: var(--bold);
  }
  
  .character-mini-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .already-member-badge {
    font-size: var(--text-xs);
    color: rgba(255, 255, 255, 0.5);
    font-style: italic;
  }
  
  /* Character Grid for Invites */
  .character-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
    max-height: 300px;
    overflow-y: auto;
    padding: 10px 0;
  }
  
  /* Modal styles are in the group-index.ejs file */
  
  /* Fix for padding */
  .p-0 {
    padding: 0 !important;
  }
</style>

<script>
  // Scroll to bottom of messages container on page load
  document.addEventListener('DOMContentLoaded', () => {
    const messageContainer = document.querySelector('.message-container');
    if (messageContainer) {
      messageContainer.scrollTop = messageContainer.scrollHeight;
    }
    
    // Modal functionality (copied from group-index.ejs)
    const modalTriggers = document.querySelectorAll('[data-toggle="modal"]');
    const modalCloseButtons = document.querySelectorAll('[data-dismiss="modal"]');
    
    modalTriggers.forEach(trigger => {
      trigger.addEventListener('click', function() {
        const targetId = this.getAttribute('data-target');
        const modal = document.querySelector(targetId);
        
        if (modal) {
          modal.style.display = 'block';
        }
      });
    });
    
    modalCloseButtons.forEach(button => {
      button.addEventListener('click', function() {
        const modal = this.closest('.modal');
        
        if (modal) {
          modal.style.display = 'none';
        }
      });
    });
    
    // Close modal when clicking outside content
    window.addEventListener('click', function(event) {
      if (event.target.classList.contains('modal')) {
        event.target.style.display = 'none';
      }
    });
    
    // Character search functionality for invite modal
    const characterSearch = document.getElementById('characterSearch');
    if (characterSearch) {
      characterSearch.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        const characterItems = document.querySelectorAll('.character-grid .character-item');
        
        characterItems.forEach(item => {
          const name = item.querySelector('.character-name').textContent.toLowerCase();
          
          if (name.includes(searchTerm)) {
            item.style.display = '';
          } else {
            item.style.display = 'none';
          }
        });
      });
    }
  });
</script>