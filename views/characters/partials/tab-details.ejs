<!-- views/characters/partials/tab-details.ejs -->
<div class="form-group">
  <label for="skills">Skills & Abilities</label>
  <textarea 
    id="skills" 
    name="skills" 
    class="form-control" 
    rows="6"
  ><%= character.skills || '' %></textarea>
</div>

<div class="form-group">
  <label for="fullBio">Full Biography</label>
  <textarea 
    id="fullBio" 
    name="fullBio" 
    class="form-control formattable-textarea" 
    rows="12"
  ><%= character.fullBio || '' %></textarea>
  <small class="form-help-text">Use this for any additional information about your character</small>
</div>