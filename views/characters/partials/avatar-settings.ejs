<!-- views/characters/partials/avatar-settings.ejs -->
<h3>Character Image</h3>

<div class="form-group">
  <div class="mb-2" id="avatar-preview-container">
    <div class="avatar-preview" id="avatar-preview">
      <% if (character.avatarUrl) { %>
        <img src="<%= character.avatarUrl %>" alt="Avatar Preview">
      <% } else { %>
        <i class="ph-duotone ph-user-circle"></i>
      <% } %>
    </div>
  </div>
  
  <label for="avatarUrl">Avatar Image URL</label>
  <input 
    type="url" 
    id="avatarUrl" 
    name="avatarUrl" 
    class="form-control" 
    placeholder="https://example.com/image.jpg"
    value="<%= character.avatarUrl || '' %>"
  />
  <small class="form-help-text">Enter a direct link to an image (JPG, PNG, or GIF)</small>
</div>

<div class="form-group">
  <label for="faceclaim">Faceclaim (Optional)</label>
  <input 
    type="text" 
    id="faceclaim" 
    name="faceclaim" 
    class="form-control" 
    value="<%= character.faceclaim || '' %>"
    placeholder="Actor/Model name"
  />
</div>

<div class="form-group mt-4">
  <div class="d-flex align-center mb-2">
    <input type="checkbox" id="isPrivate" name="isPrivate" <%= character.isPrivate ? 'checked' : '' %>>
    <label for="isPrivate" class="checkbox-label">Make this character private</label>
  </div>
  <div class="d-flex align-center">
    <input type="checkbox" id="isArchived" name="isArchived" <%= character.isArchived ? 'checked' : '' %>>
    <label for="isArchived" class="checkbox-label">Archive this character</label>
  </div>
  <small class="form-help-text">Archived characters won't appear in the main listings</small>
</div>